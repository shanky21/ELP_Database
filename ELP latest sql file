-- TABLE: batspeed_stats 
--

CREATE TABLE batspeed_stats(
    batspeed_id             INT         AUTO_INCREMENT,
    bat_speed               SMALLINT,
    exit_velocity           SMALLINT,
    date_stats_collected    DATE        NOT NULL,
    player_id               INT,
    PRIMARY KEY (batspeed_id)
)ENGINE=INNODB
;



