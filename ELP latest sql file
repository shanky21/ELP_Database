-- TABLE: pitcher_stats 
--

CREATE TABLE pitcher_stats(
    pitcher_id              INT         AUTO_INCREMENT,
    two_seem                SMALLINT,
    four_seem               SMALLINT,
    changeball              SMALLINT,
    curveball               SMALLINT,
    slider                  SMALLINT,
    knuckleball             SMALLINT,
    date_stats_collected    DATE        NOT NULL,
    player_id               INT,
    PRIMARY KEY (pitcher_id)
)ENGINE=INNODB
;



-- 
-- TABLE: player_details 
--

CREATE TABLE player_details(
    player_id     INT              AUTO_INCREMENT,
    first_name    VARCHAR(30)      NOT NULL,
    last_name     VARCHAR(30)      NOT NULL,
    dob           DATE             NOT NULL,
    grad_year     SMALLINT,
    gpa           DECIMAL(4, 2),
    height        INT,
    weight        INT,
    throws        CHAR(10),
    bats          CHAR(10),
    city          VARCHAR(25),
    state         VARCHAR(25),
    country       VARCHAR(25),
    picture       VARCHAR(15),
    school_id     INT,
    PRIMARY KEY (player_id)
)ENGINE=INNODB
;



