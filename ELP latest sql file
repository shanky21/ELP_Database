-- TABLE: catcher_stats 
--

CREATE TABLE catcher_stats(
    catcher_id              INT              AUTO_INCREMENT,
    pop_time                DECIMAL(4, 2),
    date_stats_collected    DATE             NOT NULL,
    player_id               INT,
    PRIMARY KEY (catcher_id)
)ENGINE=INNODB
;



